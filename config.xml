<?xml version='1.0' encoding='utf-8'?>
<widget id="com.savagelabs.concrn" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>concrn</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="http://*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/android/default/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="res/android/default/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="res/android/default/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="res/android/default/splash-port-xhdpi.png" density="port-xhdpi"/>
        <icon src="res/android/default/android-mdpi.png" density="mdpi" />
        <icon src="res/android/default/android-hdpi.png" density="hdpi" />
        <icon src="res/android/default/android-xhdpi.png" density="xhdpi" />
    </platform>
    <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />
      <splash src="res/ios/default/Default-568h@2x~iphone-568h@2x~iphone.png" width="320" height="480"/>
      <splash src="res/ios/default/Default-667h.png" width="750" height="1334"/>
      <splash src="res/ios/default/Default-736h.png" width="1242" height="2208"/>
      <splash src="res/ios/default/Default-iphone.png" width="320" height="480"/>
      <splash src="res/ios/default/Default@2x-iphone.png"  width="640" height="960"/>

      <!-- iOS 7.0+ -->
      <!-- iPhone / iPod Touch -->
      <icon src="res/ios/default/icon-60.png" width="60" height="60" />
      <icon src="res/ios/default/icon-60@2x.png" width="120" height="120" />

      <!-- iOS 6.1 -->
      <!-- Spotlight Icon -->
      <icon src="res/ios/default/icon-40.png" width="40" height="40" />
      <icon src="res/ios/default/icon-40@2x.png" width="80" height="80" />

      <!-- iPhone / iPod Touch -->
      <icon src="res/ios/default/icon.png" width="57" height="57" />
      <icon src="res/ios/default/icon@2x.png" width="114" height="114" />

      <!-- iPhone Spotlight and Settings Icon -->
      <icon src="res/ios/default/icon-small.png" width="29" height="29" />
      <icon src="res/ios/default/icon-small@2x.png" width="58" height="58" />


    </platform>
    <engine name="ios" spec="~3.9.2" />
    <engine name="android" spec="~4.1.1" />
    <plugin name="cordova-plugin-device" spec="~1.0.1" />
    <plugin name="cordova-plugin-dialogs" spec="~1.1.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~2.1.0" />
</widget>
